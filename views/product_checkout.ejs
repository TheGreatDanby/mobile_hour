<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ("partials/head.ejs") %>
    <title>The Mobile Hour - Checkout</title>
  </head>

  <body>
    <main>
      <%- include ("partials/header.ejs") %>
      <section class="checkout-layout">
        <article class="card lg:card-side bg-accent shadow-xl">
          <img class="p-2" src="img/mobile_phone.png" alt="Mobile Phone" />
          <div class="card-body text-white">
            <span class="card-title"><%- product.product_manufacturer %></span>
            <span class="card-title"><%- product.product_name %></span>
            <span class="font-black text-2xl tracking-wider text-right">
              $<%- product.product_price %>
            </span>
          </div>
        </article>
        <form action="/create_order" method="post" class="form-grid">
          <input
            type="hidden"
            name="product_id"
            value="<%- product.product_id %>"
          />
          <label for="customer-first-name">First Name:</label>
          <input
            class="input input-bordered input-primary w-full max-w-xs bg-white"
            type="text"
            name="customer_first_name"
            id="customer-first-name"
          />
          <label for="customer-last-name">Last Name</label>
          <input
            class="input input-bordered input-primary w-full max-w-xs bg-white"
            type="text"
            name="customer_last_name"
            id="customer-last-name"
          />
          <label for="customer-phone">Phone</label>
          <input
            class="input input-bordered input-primary w-full max-w-xs bg-white"
            type="tel"
            name="customer_phone"
            id="customer-phone"
          />
          <label for="customer-email">Email</label>
          <input
            class="input input-bordered input-primary w-full max-w-xs bg-white"
            type="email"
            name="customer_email"
            id="customer-email"
          />
          <label for="customer_address">Address</label>
          <input
            class="input input-bordered input-primary w-full max-w-xs bg-white"
            type="text"
            name="customer_address"
            id="customer-address"
          />

          <a href="/" class="btn btn-secondary">Back</a>
          <input class="btn btn-primary" type="submit" value="Pay" />
        </form>
      </section>

      <%- include ("partials/footer.ejs") %>
    </main>
  </body>
</html>
