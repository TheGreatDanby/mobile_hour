<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ("partials/head.ejs") %>
    <title>The Mobile Hour - Phones</title>
  </head>

  <body>
    <main>
      <%- include ("partials/header.ejs") %>

      <form action="product_list" method="get" class="justify-self-end">
        <div class="form-control">
          <div class="input-group">
            <input
              type="text"
              name="search_term"
              id="search-term"
              placeholder="Searchâ€¦"
              class="input input-bordered input-primary w-full max-w-xs bg-white"
            />
            <button class="btn btn-square" aria-label="Search">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
                />
              </svg>
            </button>
          </div>
        </div>
      </form>
      <section class="phone-list">
        <% for (let product of products) { %>

        <div
          class="card lg:card-side border-solid border-2 border-indigo-600 shadow-xl"
        >
          <figure>
            <img
              class="p-2"
              src="img/mobile_phone.png"
              alt="Photo of <%- product.product_manufacturer %> <%- product.product_name %>"
            />
          </figure>
          <div class="card-body text-black">
            <span class="card-title"><%- product.product_manufacturer %></span>
            <h2 class="card-title"><%- product.product_name %></h2>
            <p>Product Description <br /><%- product.product_description %></p>
            <span class="font-black text-2xl tracking-wider text-right"
              >$<%- product.product_price %></span
            >

            <div class="card-actions justify-end">
              <a
                class="btn btn-primary"
                aria-label="Buy"
                href="product_checkout?id=<%- product.product_id %> "
              >
                <span class="material-symbols-outlined"> shopping_cart </span>
                Buy
              </a>
            </div>
          </div>
        </div>
        <% } %>
      </section>

      <%- include ("partials/footer.ejs") %>
    </main>
  </body>
</html>
