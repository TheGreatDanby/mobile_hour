<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include ("partials/head.ejs") %>
    <title>The Mobile Hour - Phones</title>
  </head>

  <body>
    <main>
      <%- include ("partials/header.ejs") %>
      <form action="product_list" method="get" class="search-form">
        <input
          type="text"
          name="search_term"
          id="search-term"
          placeholder="mobile phone"
        />
        <input type="submit" value="Search" />
      </form>
      <section class="phone-list">
        <% for (let product of products) { %>
        <article class="phone-card">
          <img
            class=""
            src="img/mobile_phone.png"
            alt="Photo of <%- product.product_manufacturer %> <%- product.product_name %>"
          />
          <div class="product">
            <h2><%- product.product_name %></h2>
            <h4><%- product.product_manufacturer %></h4>

            <span>$<%- product.product_price %></span>
            <style>
              .material-symbols-outlined {
                font-variation-settings: "FILL" 0, "wght" 400, "GRAD" 10,
                  "opsz" 48;
              }
            </style>
            <span>Stock on Hand <b> <%- product.product_stock %> </b></span>
            <p><%- product.product_description %></p>
          </div>
          <a
            class="button"
            href="product_checkout?id=<%- product.product_id %> "
          >
            <span class="material-symbols-outlined"> shopping_cart </span>
            Buy
          </a>
        </article>
        <% } %>
      </section>

      <%- include ("partials/footer.ejs") %>
    </main>
  </body>
</html>
